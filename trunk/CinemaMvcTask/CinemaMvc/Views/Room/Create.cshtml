@model CinemaCommon.Entities.Room

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Room</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.MaxSeats)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MaxSeats)
            @Html.ValidationMessageFor(model => model.MaxSeats)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CinemaId, "Cinema")
        </div>
        <div class="editor-field">
            @Html.DropDownList("CinemaId", String.Empty)
            @Html.ValidationMessageFor(model => model.CinemaId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.MovieId, "Movie")
        </div>
        <div class="editor-field">
            @Html.DropDownList("MovieId", String.Empty)
            @Html.ValidationMessageFor(model => model.MovieId)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
